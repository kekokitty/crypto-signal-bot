# Application Settings
APP_NAME=CryptoBot
DEBUG=False

# Database Settings
DATABASE_PATH=./data/crypto_bot.db

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=./logs/crypto_bot.log

# Binance API Credentials (replace with your actual keys)
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

# Use testnet for development (set to True)
# Testnet keys: https://testnet.binance.vision/
BINANCE_TESTNET=True

# Telegram Notifications
# 1. Create a bot: Talk to @BotFather on Telegram, use /newbot
# 2. Get your chat ID: Talk to @userinfobot or @RawDataBot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
